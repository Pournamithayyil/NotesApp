<body>
	<div class="container">

<h4>Create new post</h4>
<hr>
<%= form_with scope: :post ,url: posts_path,:html=> {class: "form-horizontal",role:"form"}  do |form|%>
 
	<div class="form-group">
		<div class= "control-label col-sm-2">
	
		<%= form.label :title %> 
	</div>
	<div class="col-sm-8">
		<%= form.text_field :title, class:"form-control",placeholder:"Title",:style => "padding:5px;font-size:0.9em;",:required => true %>
	</div>
</div>

	<div class="form-group">
		<div class= "control-label col-sm-2">
	
		<%= form.label :body%> 
	</div>
		<div class="col-sm-8">

		<%= form.text_area :body, class:"form-control",:style => "padding:5px;font-size:0.9em;"%>
	</div>
</div>
	
<div class="form-group">
		<div class= "control-label col-sm-2">
		<%= form.label :tag%> 
	</div>
		<div class="col-sm-8">
		<%= form.text_field :tag,class:"form-control",placeholder:"Tag",:style => "padding:5px;font-size:0.9em;"%>
	</div>
</div>
	<br>


<div class="form-group">
	<div class= "control-label col-sm-2">
	</div>
		 <div class="col-xs-4">
	<%= form.submit "Save",class:"form-control" ,style:"background-color:gray;color:white"%>
</div>
</div>

<%end%>

</body>